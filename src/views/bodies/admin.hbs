<body class="bg-gray-100 min-h-screen">
  <!-- Main Content -->
  <main class="container mx-auto my-8 px-4">
    <!-- Welcome Section -->
    <div class="mb-6 text-center">
      <h1 class="text-2xl font-semibold text-gray-700">Welcome, Admin!</h1>
      <p class="text-gray-600">Manage all your resources efficiently using the dashboard below.</p>
    </div>

    <!-- Navigation Buttons -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Admin Profile Management -->
      <div class="bg-white shadow rounded-lg p-6 text-center">
        <div class="text-red-600 mb-4">
          <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"></path>
          </svg>
        </div>
        <h2 class="text-lg font-semibold mb-2">Admin Profile</h2>
        <p class="text-sm text-gray-500 mb-4">Update your profile and settings</p>
        <a href="/admin/profile/{{user.id}}" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700">Go</a>
      </div>
      <!-- User Management -->
      <div class="bg-white shadow rounded-lg p-6 text-center">
        <div class="text-blue-600 mb-4">
          <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16 11c1.657 0 3-1.343 3-3S17.657 5 16 5s-3 1.343-3 3 1.343 3 3 3zM16 21c-3.866 0-7-3.134-7-7a7 7 0 0114 0c0 3.866-3.134 7-7 7z"></path>
          </svg>
        </div>
        <h2 class="text-lg font-semibold mb-2">User Management</h2>
        <p class="text-sm text-gray-500 mb-4">View, add, and manage users</p>
        <a href="/admin/users" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Go</a>
      </div>

      <!-- Product Management -->
      <div class="bg-white shadow rounded-lg p-6 text-center">
        <div class="text-green-600 mb-4">
          <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 10h11m4 4H7m9-7H5m12 12H5a2 2 0 01-2-2V5a2 2 0 012-2h12a2 2 0 012 2v12a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h2 class="text-lg font-semibold mb-2">Product Management</h2>
        <p class="text-sm text-gray-500 mb-4">Add, update, and manage products</p>
        <a href="/admin/products" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700">Go</a>
      </div>

      <!-- Order Management -->
      <div class="bg-white shadow rounded-lg p-6 text-center">
        <div class="text-orange-600 mb-4">
          <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 17v-2a4 4 0 014-4h7m-7 0V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2h7m7-5l3-3m0 0l-3-3m3 3H9"></path>
          </svg>
        </div>
        <h2 class="text-lg font-semibold mb-2">Order Management</h2>
        <p class="text-sm text-gray-500 mb-4">Track and manage customer orders</p>
        <a href="/admin/orders" class="bg-orange-600 text-white px-4 py-2 rounded-lg hover:bg-orange-700">Go</a>
      </div>

      <!-- Reports -->
      <div class="bg-white shadow rounded-lg p-6 text-center">
        <div class="text-purple-600 mb-4">
          <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11 17l-5-5m0 0l5-5m-5 5h12"></path>
          </svg>
        </div>
        <h2 class="text-lg font-semibold mb-2">Reports</h2>
        <p class="text-sm text-gray-500 mb-4">View revenue and performance reports</p>
        <a href="/admin/reports" class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700">Go</a>
      </div>
    </div>
  </main>
</body>
