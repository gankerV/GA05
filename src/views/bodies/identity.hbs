{{#if (isEqual status 0)}}
<section class="bg-white py-16">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-center">
            <div class="md:w-1/3 bg-white rounded-lg shadow-md p-4 md:p-10 md:m-10">
                <p class="text-center text-lg">{{message}}</p>

                <a href="/user/login">
                    <p class="text-center underline text-blue">Login</p>
                </a>
            </div>
        </div>
    </div>
</section>
{{else if (isEqual status 1)}}
<section class="bg-white py-16">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-center">
            <div class="md:w-1/2 lg:w-1/3 bg-white rounded-lg shadow-md p-4 md:p-10 md:m-10">
                <h2 class="text-2xl font-semibold mb-10">Find your account</h2>
                <form action="/user/login/identity" method="post">
                    <div class="mb-3 border-y-2 py-6">
                        <p class="pb-4">Please enter your email to search for your account.</p>
                        <input type="email" id="email"
                            class="w-full px-3 py-1 border-2 rounded-full focus:border-transparent focus:outline-none focus:ring-2 focus:ring-primary"
                            name="Email" placeholder="Email" required />
                    </div>
                    <button type="submit"
                        class="bg-primary text-white border border-primary hover:bg-transparent hover:text-primary py-2 px-3 rounded-full w-full">
                        Find
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
{{else}}

{{/if}}